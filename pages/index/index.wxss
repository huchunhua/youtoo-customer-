@import "/icon.wxss";
@import "/base-rpx.wxss";
Page {
    text-align: center;
    position: relative;
}
.name{
    height: 200rpx;
    line-height: 200rpx;
    text-align: left;
    background-color: #FDC21E;
    color:#fff;
    padding-left: 15rpx
}
.content{
    width: 690rpx;
    height: 744rpx;
    background-image: url(https://youbao-1251769479.cos.ap-chengdu.myqcloud.com/youtu_sale/bg_home.png);
    background-size: 100%;
    background-position: center;
    background-repeat: no-repeat;
    position: absolute;
    top:140rpx;
    left:50%;
    margin-left: -345rpx;
}
.num{
    padding-top:90rpx;
    color: #ff5a5a;
}
.input-wrp{
    margin-top: 80rpx;
    border-top: 1px solid #ECECEC;
    padding: 60rpx 40rpx 0;
}
input{
    border:1px solid #d5d5d5;
    height: 85rpx;
    line-height: 85rpx;
    padding:auto 30rpx;
}
.input-wrp .btn{
    margin-left: 35rpx;
    width: 150rpx;
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    border-radius: 10rpx;
    color:#fff;
}
.scancode{
    margin:60rpx 40rpx 0;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 8rpx;
    color:#fff;
}
.btn-orange{
    margin-top:20rpx;
    background-color:#FD951E;
}
#codeinfoModal,#tipsModal{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
    z-index: 9999;
    text-align: center;
}
.modal-container{
    position: absolute;
    width: calc(100% - 220rpx);
    height: calc(100% - 400rpx);
    background-color: #fff;
    left:110rpx;
    top:200rpx;
    border-radius: 8rpx;
}
#tipsModal .modal-container
{
    padding-top:210rpx;
    background-image: url(https://youbao-1251769479.cos.ap-chengdu.myqcloud.com/youtu_sale/bg_popup.png);
    background-size: 100%;
    background-position: center;
    background-repeat: no-repeat;
}
.store_name,.code_name{
    font-size: 32rpx;
}
.code_title{
    margin:20rpx auto;
    width: 428rpx;
    height: 242rpx;
    background-image: url(https://youbao-1251769479.cos.ap-chengdu.myqcloud.com/youtu_sale/pic_popup_coupon.png);
    background-size: 100%;
    background-position: center;
    background-repeat: no-repeat;
    padding-top:108rpx;
}
.btn-verify{
    width: calc(100% - 40rpx);
    height: 80rpx;
    line-height: 80rpx;
    position: absolute;
    bottom:40rpx;
    color:#fff;
    box-sizing: content-box;
}
.btn-close{
    position: absolute;
    bottom:100rpx;
    width:60rpx;
    height: 60rpx;
    left:50%;
    margin-left: -30rpx;
}
#tipsModal .icon{
    width: 160rpx;
    height: 160rpx;
}